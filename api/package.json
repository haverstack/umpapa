{
  "name": "umpapa-api",
  "version": "1.0.0",
  "description": "A serverless API for umpapa",
  "main": "dist/worker.js",
  "scripts": {
    "build": "webpack",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "format:check": "prettier --check --ignore-path .gitignore --write --plugin-search-dir=. .",
    "lint": "eslint --max-warnings=0 ./src && npm run format:check",
    "lint:fix": "eslint --fix --max-warnings=0 ./src && npm run format",
    "test": "jest --verbose"
  },
  "author": "Jen Garcia <jen@haverstack.com> (https://haverstack.com/)",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/cuibonobo/umpapa/issues"
  },
  "homepage": "https://github.com/cuibonobo/umpapa#readme",
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.0.0",
    "@types/jest": "^26.0.23",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-typescript": "^3.0.0",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "service-worker-mock": "^2.0.5",
    "ts-jest": "^27.0.1",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "itty-router": "^2.4.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "/test/.*\\.test\\.ts$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,js}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": -5
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 100,
    "endOfLine": "auto"
  }
}
