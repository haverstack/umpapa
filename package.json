{
  "name": "umpapa",
  "version": "1.0.0",
  "description": "An app for creating avatars.",
  "scripts": {
    "build-api": "cd api && npm run build",
    "build-app": "cd app && npm run build",
    "build": "npm run build-api && npm run build-app",
    "clean-api": "cd api && npm run clean",
    "clean-app": "cd app && npm run clean",
    "clean": "npm run clean-api && npm run clean-app",
    "clean-app:all": "cd app && npm run clean:all",
    "clean:all": "npm run clean-api && npm run clean-app:all",
    "format-api": "cd api && npm run format",
    "format-app": "cd app && npm run format",
    "format": "npm run format-api && npm run format-app",
    "format-api:check": "cd api && npm run format:check",
    "format-app:check": "cd app && npm run format:check",
    "format:check": "npm run format-api:check && npm run format-app:check",
    "lint-api": "cd api && npm run lint",
    "lint-app": "cd app && npm run lint",
    "lint": "npm run lint-api && npm run lint-app",
    "lint-api:fix": "cd api && npm run lint:fix",
    "lint-app:fix": "cd app && npm run lint:fix",
    "lint:fix": "npm run lint-api:fix && npm run lint-app:fix",
    "test-api": "cd api && npm run test",
    "test-app": "cd app && npm run test",
    "test": "npm run test-api && npm run test-app",
    "watch-api": "cd api && npm run start",
    "watch-app": "cd app && npm run start",
    "start": "concurrently -k -p \"[{name}]\" -c \"cyan.bold,green.bold\" \"npm:watch-api\" \"npm:watch-app\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuibonobo/umpapa.git"
  },
  "author": "Jen Garcia <jen@haverstack.com> (https://haverstack.com/)",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/cuibonobo/umpapa/issues"
  },
  "homepage": "https://github.com/cuibonobo/umpapa#readme",
  "devDependencies": {
    "concurrently": "^6.3.0"
  }
}
